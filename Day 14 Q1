#include <stdio.h>

int main() {
    int n, i, sum = 0;
    int odd = 1;

    
    printf("Enter the number of odd numbers to sum: ");
    scanf("%d", &n);

    // Validate input
    if (n <= 0) {
        printf("Please enter a positive number.\n");
        return 1;
    }

   
    for (i = 1; i <= n; i++) {
        sum += odd;
        odd += 2;
    }

    // Output the result
    printf("Sum of the first %d odd numbers is: %d\n", n, sum);

    return 0;
}
